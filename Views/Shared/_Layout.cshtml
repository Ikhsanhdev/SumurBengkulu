    <script>
        moment.locale('id');

        $(document).ready(function () {
            let initDateClock = setInterval(showDateClock, 1000);
        });

        window.showDateClock = function () {
            let momentjs = moment();

            momentjs.locale('id');

            momentjs.tz("Asia/Jakarta");

            $('#show_date').html('<i class="fe-calendar"></i> ' + momentjs.format('dddd, D MMMM YYYY') + ' ' + momentjs.format('HH:mm:ss') + ` WIB`);
        };
    </script>

